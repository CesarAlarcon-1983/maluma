extends ../_layouts/base

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../';

include ../_modules/propiedad/propiedad
include ../_modules/pagination/pagination
include ../_modules/loading-screen/loading-screen

block content
  +loading-screen

  main.venta
    .container
      .row
        .col-24
          h2.venta__title Propiedades en venta 
        .col-24
          .venta__filtros
            .venta__filtros__wrapper
              .venta__filtros__group
                .venta__filtros__text Ordenar por:
                select.venta__filtros__sort
                  option Menor Precio
                  option Mayor Precio
                  option filtro 3
                  option filtro 4
                  option filtro 5
              .venta__filtros__group
                button.venta__filtros__filter-icon.-js-filter-button
                  i.fa.fa-filter
                .venta__filtros__options.-js-filter-container
                  select.venta__filtros__select.-js-inmueble
                    option(selected disabled hidden) Tipo de inmueble

                  //- select.venta__filtros__select
                  //-   option Operaci贸n
                  //-   option Venta
                  //-   option Alquiler
                  //-   option Operaci贸n 3
                  //-   option Operaci贸n 4
                  //-   option Operaci贸n 5

                  select.venta__filtros__select.-js-barrios
                    option(selected disabled hidden) Barrio
                    //- option Barrio 1
                    //- option Barrio 2
                    //- option Barrio 3
                    //- option Barrio 4
                    //- option Barrio 5

                  select.venta__filtros__select.-js-ambientes
                    option(selected disabled hidden) Ambientes
                    option(value="1 AMBIENTES") 1 Ambiente
                    option(value="2 AMBIENTES") 2 Ambientes
                    option(value="3 AMBIENTES") 3 Ambientes
                    option(value="4 AMBIENTES") 4 Ambientes
                    option(value="5 AMBIENTES") 5 Ambientes
                    option(value="6 AMBIENTES") 6 Ambientes
                    option(value="7 AMBIENTES") 7+ Ambientes

                  .venta__filtros__radiobox
                    .venta__filtros__radiobox-group
                      input.venta__filtros__radiobox-input(type="radio" id="currency1" name="currency")
                      label.venta__filtros__radiobox-label(for="currency1") USD
                    //- .venta__filtros__radiobox-group
                    //-   input.venta__filtros__radiobox-input(type="radio" id="currency2" name="currency")
                    //-   label.venta__filtros__radiobox-label(for="currency2") Pesos

                  .venta__filtros__price
                      label.venta__filtros__price-range__label.js-range-price-low
                      label.venta__filtros__price-range__label.js-range-price-high
                      .venta__filtros__price-range__bar-wrapper
                          input.venta__filtros__price-range__bar.js-range-price(type='range', multiple, value="0", step="10000" min="0", max="1500000")
                          input(type="hidden", name="from-price", id="inputPriceFrom").-js-minimo
                          input(type="hidden", name="to-price", id="inputPriceTo").-js-maximo


                  //- select.venta__filtros__select.-js-amenities
