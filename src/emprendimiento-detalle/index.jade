              li.emprendimiento-detalle__item
                a(href="#")
                  i.fa.fa-print

        .col-24
          .row
            .col-24
              .emprendimiento-detalle__description
                h3.emprendimiento-detalle__description__title descripción
                p.emprendimiento-detalle__description__text.-js-full-description

            .col-24
              .row.emprendimiento-detalle__details__row-container
                .col-24
                  .emprendimiento-detalle__details
                    .emprendimiento-detalle__details__heading
                      button.emprendimiento-detalle__details__tab(data-target="detalles") detalles
                      button.emprendimiento-detalle__details__tab(data-target="caracteristicas") caracteristicas
                      button.emprendimiento-detalle__details__tab(data-target="medidas") medidas
                .col-24.emprendimiento-detalle__details__content(data-content="detalles")
                  .emprendimiento-detalle__details__wrapper
                    .row.emprendimiento-detalle__details__container.-js-detalles-container

                .col-24.emprendimiento-detalle__details__content(data-content="caracteristicas")
                  .emprendimiento-detalle__details__wrapper
                    .row.emprendimiento-detalle__details__container.-js-caracteristicas-container

                .col-24.emprendimiento-detalle__details__content(data-content="medidas")
                  .emprendimiento-detalle__details__wrapper
                    .row.emprendimiento-detalle__details__container.-js-medidas-container

