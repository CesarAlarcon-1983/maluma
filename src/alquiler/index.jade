extends ../_layouts/base

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../';

include ../_modules/propiedad/propiedad
include ../_modules/loading-screen/loading-screen
include ../_modules/pagination/pagination

block content
  +loading-screen
  
  main.alquiler
    .container
      .row
        .col-24
          h2.alquiler__title Propiedades en alquiler
        .col-24
          .alquiler__filtros
            .alquiler__filtros__wrapper
              .alquiler__filtros__group
                .alquiler__filtros__text Ordenar por:
                select.alquiler__filtros__sort
                  option Mayor Precio
                  option Menor Precio
                  option filtro 3
                  option filtro 4
                  option filtro 5
              .alquiler__filtros__group
                button.alquiler__filtros__filter-icon.-js-filter-button
                  i.fa.fa-filter
                .alquiler__filtros__options.-js-filter-container
                  select.alquiler__filtros__select.-js-inmueble
                    option Tipo de inmueble

                  //- select.alquiler__filtros__select
                  //-   option Operación
                  //-   option Operación 1
                  //-   option Operación 2
                  //-   option Operación 3
                  //-   option Operación 4
                  //-   option Operación 5

                  select.alquiler__filtros__select.-js-barrios
                    option(selected disabled hidden) Barrio
                    //- option Barrio 1
                    //- option Barrio 2
                    //- option Barrio 3
                    //- option Barrio 4
                    //- option Barrio 5

                  select.alquiler__filtros__select.-js-ambientes
                    option(selected disabled hidden) Ambientes
                    option(value="1 AMBIENTES") 1 Ambiente
                    option(value="2 AMBIENTES") 2 Ambientes
                    option(value="3 AMBIENTES") 3 Ambientes
                    option(value="4 AMBIENTES") 4 Ambientes
                    option(value="5 AMBIENTES") 5 Ambientes
                    option(value="6 AMBIENTES") 6 Ambientes
                    option(value="7 AMBIENTES") 7+ Ambientes

                  .venta__filtros__radiobox
                    .venta__filtros__radiobox-group
                      input.venta__filtros__radiobox-input(type="radio" id="currency1" name="currency")
                      label.venta__filtros__radiobox-label(for="currency1") USD
                    .venta__filtros__radiobox-group
                      input.venta__filtros__radiobox-input(type="radio" id="currency2" name="currency")
                      label.venta__filtros__radiobox-label(for="currency2") Pesos

                  .alquiler__filtros__price
                      label.alquiler__filtros__price-range__label.js-range-price-low
                      label.alquiler__filtros__price-range__label.js-range-price-high
                      .alquiler__filtros__price-range__bar-wrapper
                          input.alquiler__filtros__price-range__bar.js-range-price(type='range', multiple, value="0", step="10000" min="0", max="1500000")
                          input(type="hidden", name="from-price", id="inputPriceFrom").-js-minimo
                          input(type="hidden", name="to-price", id="inputPriceTo").-js-maximo

                  //- .alquiler__filtros__radiobox
