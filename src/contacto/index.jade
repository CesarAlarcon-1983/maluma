extends ../_layouts/base

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../';

block content
  main.contacto
    section.contacto__hero
      .container
        .row
          .col-24
            h2.contacto__hero__title ¿Buscando tu proximo hogar? Encotralo en Maluma
            p.contacto__hero__text ¡Tenemos más de 350 propiedades online para vos!
    section.contacto__mensaje
      .container
        .row
          .col-24
            h2.contacto__mensaje__title envíenos un mensaje
          .col-24.col-md-8
            .contacto__mensaje__group
              i.fa.fa-map-marker
              p Cosquín 86. C.P. C1408GIB<br>Ciudad de Buenos Aires, Argentina.
          .col-24.col-md-8
            .contacto__mensaje__group
              i.fa.fa-mobile
              p 4641-4702 / 4641-4246 / 4644-0337
          .col-24.col-md-8
            .contacto__mensaje__group
              i.fa.fa-envelope-o
              a(href="mailto:malumapropiedades@gmail.com" target="_blank") malumapropiedades@gmail.com
          .col-24
            form.contacto__mensaje__form
              .row
                .col-24.col-md-8
                  .contacto__mensaje__form-group
                    input.contacto__mensaje__form-input.-js-contact-input(placeholder="Nombre*" name="nombre")

                .col-24.col-md-8
                  .contacto__mensaje__form-group
                    input.contacto__mensaje__form-input.-js-contact-input(placeholder="Teléfono*" name="telefono")

                .col-24.col-md-8
                  .contacto__mensaje__form-group
                    label.contacto__mensaje__form-error Direccion de e-mail no valida
                    input.contacto__mensaje__form-input.-js-contact-input(placeholder="Email*" name="mail")

                .col-24
                  .contacto__mensaje__form-group
                    input.contacto__mensaje__form-input.-js-contact-input(placeholder="Nombre de la propiedad*" name="propiedad")

                .col-24.col-md-6
                  .contacto__mensaje__form-group.contacto__mensaje__form-group--select
                    label.contacto__mensaje__form-label Deseo ser llamado desde:*
                    select.contacto__mensaje__form-select.-js-contact-input(name="hora-min")
                      option(selected hidden disabled) Selecciona una hora
                      option 8 AM
                      option 9 AM
                      option 10 AM
                      option 11 AM
                      option 12 AM

                .col-24.col-md-6
                  .contacto__mensaje__form-group.contacto__mensaje__form-group--select-labeless
                    select.contacto__mensaje__form-select.-js-contact-input(name="hora-max")
                      option(selected hidden disabled) Selecciona una hora
                      option 2 PM
                      option 3 PM
                      option 4 PM
                      option 5 PM
                      option 6 PM

                .col-24.col-md-6
                  .contacto__mensaje__form-group.contacto__mensaje__form-group--select
                    label.contacto__mensaje__form-label Día de visita*
                    input.contacto__mensaje__form-date.-js-contact-input(type="date" name="dia-visita")

                .col-24.col-md-6
                  .contacto__mensaje__form-group.contacto__mensaje__form-group--select
                    label.contacto__mensaje__form-label Hora de visita*
                    select.contacto__mensaje__form-select.-js-contact-input(name="hora-visita")
                      option(selected hidden disabled) Selecciona una hora
                      option 8 AM
                      option 9 AM
                      option 10 AM
                      option 11 AM
                      option 12 AM

                .col-24
                  .contacto__mensaje__form-group
                    input.contacto__mensaje__form-input.-js-contact-input(placeholder="Asunto*" name="asunto")

                .col-24
                  .contacto__mensaje__form-group.contacto__mensaje__form-group--textarea
                    textarea.contacto__mensaje__form-input.-js-contact-input(placeholder="Mensaje*" name="mensaje")

                .col-24
                  .contacto__mensaje__form-group
                    p.contacto__mensaje__required *Todos los campos son requieridos

                .col-24
                  .contacto__mensaje__form-group
                    button.contacto__mensaje__form-button(disabled) enviar
